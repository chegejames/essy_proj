<h1>Listing bank_accounts</h1>

<table class="table table-striped table-bordered table-condensed table-hover">
  <tr>
    <th>Bank name</th>
    <th>Account name</th>
    <th>Account number</th>
    <th>Beneficiary branch</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bank_accounts.each do |bank_account| %>
  <tr>
    <td><%= bank_account.bank_name %></td>
    <td><%= bank_account.account_name %></td>
    <td><%= bank_account.account_number %></td>
    <td><%= bank_account.beneficiary_branch %></td>
    <td><%= link_to 'Show', bank_account, class: "btn btn-mini btn-info" %></td>
    <td><%= link_to 'Edit', edit_bank_account_path(bank_account), class: "btn btn-mini btn-warning" %></td>
    <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-mini btn-danger"%></td>
  </tr>
<% end %>
</table>

