<%= wicked_pdf_stylesheet_link_tag "members"%>
<table class="table table-striped table-bordered table-condensed table-hover">
  <tr>
    <td>Reciept NO.</td>
    <td><%= @payment.id%></td>
  </tr>
  <tr>
    <td>Date</td>
    <td><%= @payment.date.to_date%></td>
  </tr>
  <tr>
    <td>Recieved from</td>
    <td><%= "#{@member.first_name} #{@member.last_name}"%></td>
  </tr>
  <tr>
    <td>The amount of Kshs</td>
    <td><%= @payment.amount%></td>
  <tr>
    <td>Balance</td>
    <td><%= @payment.balance%></td>
  </tr>
  <tr>
    <td>Mode of payment</td>
    <td><%= @payment.mode_of_payment%></td>
    <%if @payment.mode_of_payment == "cheque"%>
      <tr>
          <td>Cheque No.</td>
          <td><%= @payment.cheque_no%></td>
      </tr>
      <tr>
          <td>Bank name</td>
          <td><%= @payment.bank_name%></td>
      </tr>
    <%end%>
  <tr>
  <tr>
    <td>Being payment for</td>
    <td>Subscription</td>
  </tr>

</table>
<section class="pull-right signature">
  <p>With Thanks<p><br />
  <hr>
  <p>For Kenya Magistrates and Judges Association</p>
</section>
