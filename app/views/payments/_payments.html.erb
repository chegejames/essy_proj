<span>SUBSCRIPTION STATEMENT<span><br>
Membership ID: <%= "#{@member.id}"%><br />
Name: <%= "#{@member.first_name} #{@member.last_name}"%><br />
Date: <%= @payments.last.date%><br />

  <table class="table table-striped table-bordered table-condensed table-hover">
    <tr>
     <th>Date</th>
     <th>Invoice</th>
     <th>Mode of payment</th>
     <th>Cheque no</th>
     <th>Bank name</th>
     <th>Amount</th>
     <th>Balance</th>

  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.date%></td>
      <td><%= payment.invoice%></td>
      <td><%= payment.mode_of_payment %></td>
      <td><%= payment.cheque_no %></td>
      <td><%= payment.bank_name %></td>
      <td><%= payment.amount %></td>
      <td><%= payment.balance %></td>
   </tr>
 <% end %>
</table>
<section class="pull-right signature">
  <p>With Thanks<p><br />
  <hr>
  <p>For Kenya Magistrates and Judges Association</p>
</section>


