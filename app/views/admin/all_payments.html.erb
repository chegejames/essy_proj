<h1>All payments</h1>

<section>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
     <th>Date</th>
     <th>First Name</th>
     <th>Last Name</th>
     <th>Invoice</th>
     <th>Amount</th>
     <th>Balance</th>
     <th></th>
     <th></th>
    </tr>

  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.date%></td>
      <td><%= payment.member.First_Name%></td>
      <td><%= payment.member.Last_Name%></td>
      <td><%= payment.invoice%></td>
      <td><%= payment.amount %></td>
      <td><%= payment.balance %></td>
      <td><li class="btn btn-mini btn-info"><%= link_to 'Show',[payment.member, payment]%></li></td>
      <td><li class="btn btn-danger btn-mini"><%= link_to 'Destroy', [payment.member, payment], method: :delete, data: { confirm: 'Are you sure?' }%></li></td>
    </tr>
  <% end %>
  </table>

  <br />
