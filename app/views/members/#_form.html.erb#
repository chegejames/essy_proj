<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= f.label :First_Name %><br />
    <%= f.text_field :First_Name %>


    <%= f.label :Last_Name %><br />
    <%= f.text_field :Last_Name %>


    <%= f.label :Designation %><br />
    <%= f.select :Designation, Member::Designations %>


    <%= f.label :Email_Address %><br />
    <%= f.text_field :Email_Address %>


    <%= f.label :Cell_Number %><br />
    <%= f.text_field :Cell_Number %>


    <%= f.label :Region %><br />
    <%= f.select :Region, Member::Regions %>


    <%= f.label :active %>
    <%= f.check_box :active, {checked: true} %> </br>

    
    <%= f.submit "Add member", class: "btn btn-primary btn-large" %>

<% end %>
