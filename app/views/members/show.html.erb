<span class="label label-success"><%= notice %></span>
 <%= link_to image_tag("pdf.jpeg", size: "40x20", title: "all members"), member_path(@member, format: :pdf), class: "span1 pull-right"%>
<table class="table table-striped table-bordered table-condensed table-hover">
  <tr>
    <th>Membership ID</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Designation</th>
    <th>Region</th>
    <th>Active</th>
    <th></th>
  </tr>

  <tr>
    <td><%= @member.id%></td>
    <td><%= @member.first_name %></td>
    <td><%= @member.last_name %></td>
    <td><%= @member.designation %></td>
    <td><%= @member.region %></td>
    <td><%= @member.active %></td>
    <%if can? :update, Member%>
    <td><%= link_to 'Edit', edit_member_path(@member), class: "btn btn-mini btn-warning"%></td>
    <%end%>
  </tr>

</table>


<%= link_to 'Back', members_path, class: "btn" %>

<%= link_to 'view payments', member_payments_path(@member), class: "btn  btn-primary"%>
<%if @member.designation == "Judge"%>
<%if can? :create, Payment%>
<%= link_to "Make a payment", new_member_payment_path(@member), class: "btn btn-primary"%>
<%end%>
<%end%>
