<h1>Listing users</h1>

<table class="table table-striped table-bordered table-hover table-condensed"
  <tr>
    <th>Name</th>
    <th>Hashed password</th>
    <th>Salt</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.hashed_password %></td>
    <td><%= user.salt %></td>
    <td><%= link_to 'Show', user, class: "btn btn-mini btn-info" %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-mini btn-warning"%></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger"%></td>
  </tr>
<% end %>
</table>

